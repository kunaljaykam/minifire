{
    "manifest_version": 3,
    "name": "Minifire",
    "version": "1.0",
    "description": "Minifies text or code from the clipboard.",
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "storage",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"

    },
    "background": {
      "service_worker": "background.js"
    }
  }
  